[global]
    # General info
    workgroup = <%= @workgroup %>
    netbios name = <%= @netbios_name %>
    server string = <%= @server_string %>
  <% if @interfaces.size > 0 %>
    interfaces = <%= @interfaces.join(' ') %>
  <% end %>
  <% if @hosts_allow.size > 0 %>
    hosts allow = <%= @hosts_allow.join(' ') %>
  <% end %>

    deadtime = 10

    # Log related
    log level = <%= @log_level %>
    log file = <%= @log_file %>
    max log size = <%= @max_log_size %>
    debug pid = <%= @debug_pid %>
    debug uid = <%= @debug_uid %>
    syslog = <%= @syslog %>

    # Printing related
    printing = <%= @printing %>
    printcap name = <%= @printcap_name %>

    security = <%= @security %>
    os level = <%= @os_level %>

    # What is that ?
    logon path =
    logon home =
    logon drive =
    logon script =

    obey pam restrictions = <%= @obey_pam_restrictions %>

    utmp = <%= @utmp %>
